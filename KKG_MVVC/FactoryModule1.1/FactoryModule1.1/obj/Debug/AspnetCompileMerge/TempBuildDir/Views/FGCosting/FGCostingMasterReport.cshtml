<div class="panel panel-default">
    <div class="panel-heading">
        <b>FG Costing Master Report</b>
    </div>

    <div class="panel-body">
        <div style="border:1px solid #d9d7d7; border-radius:5px;">
            <div style="margin:5px 5px 5px 5px;">
                <div class="row" style="padding-left:10px;">
                    <div class="col-md-1" style="width:7%;">
                        Report
                    </div>
                    <div class="col-md-2" style="width:13%;">
                        <select id="REPORTTYPE" class="form-control" name="costingreport">
                            <option value="0">SELECT</option>
                            <option value="FGBOM">FG BOM</option>
                            <option value="BULKCOST">BULK COST</option>
                            <option value="BULKBOM">BULK BOM</option>
                            <option value="MATERIAL">MATERIAL RATE</option>
                        </select>
                    </div>
                    <div class="col-md-1" style="width:4%;">
                        Branch
                    </div>
                    <div class="col-md-2" style="width:13%;">
                        @Html.DropDownListFor(m => m.BRID, new SelectList(string.Empty, "BRID", "BRNAME"), new { @class = "form-control" })
                    </div>
                    <div class="col-md-1" style="width:5%;">
                        Category
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(m => m.DIVID, new SelectList(string.Empty, "DIVID", "DIVNAME"), new { @class = "form-control chosen" })
                    </div>
                    <div class="col-md-1" style="width:9%;">
                        Sub Category
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(m => m.CATID, new SelectList(string.Empty, "CATID", "CATNAME"), new { @class = "form-control chosen" })
                    </div>
                </div>

                <div style="margin-top:10px;"></div>

                <div class="row" style="padding-left:10px;">
                    <div class="col-md-1" style="width:7%;">
                        FG Items
                    </div>
                    <div class="col-md-2" style="width:11%;">
                        <select id="PRODUCTID" class="form-control chosen" multiple="multiple"></select>
                    </div>
                    <div class="col-md-2" style="width:10%;" id="divdateheader">
                        (From-To) Date
                    </div>
                    <div class="col-md-2" style="width:8%;" id="divfromdate">
                        @Html.EditorFor(model => model.FROMDATE, new { htmlAttributes = new { @class = "form-control date-picker", @readonly = "true", style = "width: 100px; display:initial;" } })
                    </div>
                    <div class="col-md-2" style="width:8%;" id="divtodate">
                        @Html.EditorFor(model => model.TODATE, new { htmlAttributes = new { @class = "form-control date-picker", @readonly = "true", style = "width: 100px; display:initial;" } })
                    </div>
                    <div class="col-md-1">
                        <input type="submit" value="Show" class="btn btn-primary" id="btnshow" />
                    </div>
                    <div class="col-md-1">
                        <input type="submit" value="Reset" class="btn btn-danger" id="btncancel" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="scroll" style="height:336px;">
                            <table id="grdcosting" class="table table-striped table-bordered dt-responsive nowrap"></table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<div id="dialog" style="display:none;">
    <table>
        <tr>
            <td align="right" style="background-color:#fff; padding-top:20px; width:50%;">
                <img id="imgLoader" alt="" src="../images/ajax-loader.gif" style="visibility: hidden" />
            </td>
            <td style="background-color:#fff; padding-top:20px;">
                &nbsp;&nbsp;&nbsp;&nbsp;Please wait...
            </td>
        </tr>
    </table>
</div>