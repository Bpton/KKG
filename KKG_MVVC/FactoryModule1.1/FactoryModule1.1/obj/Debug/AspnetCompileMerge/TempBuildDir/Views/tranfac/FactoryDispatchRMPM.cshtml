        <div id="dvAdd">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Dispatch Information</b>
                    </div>
                </div>
                <div class="row col-xs-12" id="divTransferNo">
                    <div class="col-xs-2">
                        Transfer No:
                    </div>
                    <div class="col-xs-10">
                        @Html.TextBoxFor(model => model.TransferNo, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Factory:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.BRID, new SelectList(string.Empty, "BRID", "BRNAME"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.BRNAME)
                    </div>
                    <div class="col-xs-2">
                        To Depot/Factory&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.TODEPOTID, new SelectList(string.Empty, "TODEPOTID", "BRPREFIX"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.BRPREFIX)
                        @Html.Hidden("hdnCHECKER", "")
                        @Html.Hidden("hdnmenuid", "")
                        @Html.Hidden("hdntaxcount", "")
                        @Html.Hidden("hdntaxname", "")
                        @Html.Hidden("hdntaxpercentage", "")
                        @Html.Hidden("hdnrelatedto", "")
                        @Html.Hidden("hsntaxid", "")
                        @Html.Hidden("hdndispatchID", "")
                    </div>
                    <div class="col-xs-2">
                        E-Waybill:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.WAYBILLID, new SelectList(string.Empty, "WAYBILLID", "WAYBILLNO"), new { @class = "form-control chosen" })
                    </div>

                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Insurance Co.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.ID, new SelectList(string.Empty, "ID", "COMPANY_NAME"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.COMPANY_NAME)
                    </div>
                    <div class="col-xs-2">
                        Policy No.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.INSURANCE_NO, new SelectList(string.Empty, "INSURANCE_NO", "NO"), new { @class = "form-control chosen" })
                    </div>
                    <div class="col-xs-2">
                        Mode Of Trans:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.Tranportmode, new List<SelectListItem>
                        {
                            new SelectListItem{ Text="By Road", Value = "By Road" },
                            new SelectListItem{ Text="By Rail", Value = "By Rail" },
                            new SelectListItem{ Text="By Ship", Value = "By Ship" },
                            new SelectListItem{ Text="By Air", Value = "By Air" },
                        }, new { @class = "form-control" })
                    </div>

                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Transporter&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.TransporterID, new SelectList(string.Empty, "TransporterID", "TransporterNAME"), new { @class = "form-control chosen" })
                        @Html.Hidden("Transporter", "")
                    </div>
                    <div class="col-xs-2">
                        Vehichle No.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.VehichleNo, new { @class = "form-control", @onkeypress = "return true;" })
                    </div>
                    <div class="col-xs-2">
                        Lr/Gr No.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.LrGrNo, new { @class = "form-control", @onkeypress = "return true;" })
                    </div>

                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        LR/GR Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.LrGrDate, new { @disabled = "disabled", style = "width: 100px" })
                    </div>
                    <div class="col-xs-2">
                        Dispatch Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.DispatchDate, new { @disabled = "disabled", style = "width: 100px" })
                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>

                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Gatepass No:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.GatepassNo, new { @class = "form-control", @onkeypress = "return true;" })
                    </div>
                    <div class="col-xs-2">
                        Gatepass Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.GatepassDate, new { @disabled = "disabled", style = "width: 100px" })
                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>

                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Shipping Address:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextAreaFor(model => model.ShippingAddress, new { @class = "form-control", @rows = 4, @onkeypress = "return true;", style = "width: 250px;height: 95px;" })
                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">
                        Delivery Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.DeliveryDate, new { @disabled = "disabled", style = "width: 100px" })
                    </div>

                </div>

            </div>

            <div style="margin-top:25px;"></div>

            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Product Details</b>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Category:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.CATID, new SelectList(string.Empty, "CATID", "CATNAME"), new { @class = "form-control chosen", style = "width: 250px;" })

