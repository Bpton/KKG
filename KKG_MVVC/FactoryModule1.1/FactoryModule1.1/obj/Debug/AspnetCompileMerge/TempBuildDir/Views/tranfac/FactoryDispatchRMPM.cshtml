                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>

                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        MRP:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.MRP, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                    <div class="col-xs-2">
                        Stock Qty:
