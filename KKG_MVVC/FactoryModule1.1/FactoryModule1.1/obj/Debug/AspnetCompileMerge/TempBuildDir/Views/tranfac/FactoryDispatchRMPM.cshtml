                        <input type="submit" id="btnAddnew" value="Add New Record" class="btn btn-primary" />
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-12">

                    </div>
