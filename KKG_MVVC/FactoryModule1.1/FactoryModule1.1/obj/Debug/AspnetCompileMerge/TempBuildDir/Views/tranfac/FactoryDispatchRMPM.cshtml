                    <div class="col-xs-2">
                        Gross Amt.:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.GrossAmt, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                    <div class="col-xs-2">
                        R/O:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.RoundOff, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                    <div class="col-xs-2">
                        Net Amt.:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.NetAmt, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Total Case:
