<div class="panel panel-default">
    <div class="panel-heading">
        <b>PRODUCTION ORDER WITHOUT FORECASTING</b>
    </div>
    <div style="margin-top:10px;"></div>
    <div class="panel-body">
        <div id="dvDisplay">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Production Details</b>
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-2">
                        From Date:
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="txtfrmdate" style="width: 100px;height:20px;" disabled="disabled" onkeypress="return false;" />
                    </div>
                    <div class="col-sm-2">
                        To Date:
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="txttodate" style="width: 100px;height:20px;" disabled="disabled" onkeypress="return false;" />
                    </div>

                    <div class="col-xs-4" id="divnewentry">
                        <input type="submit" id="btnsearch" value="Search" class="btn btn-primary" />
                        <input type="submit" id="btnAddnew" value="Add New Record" class="btn btn-primary" />
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-12">

                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-lg-12">
                        <table id="ProductionGrid" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"></table>
                    </div>
                </div>
            </div>
        </div>

        <div id="dvAdd">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Production Order Details</b>
                    </div>
                </div>
                <div class="row col-xs-12" id="divProductioNo">
                    <div class="col-xs-2">
                        Production No:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.PRODUCTIONNO, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                    <div class="col-xs-2">
                        Batchno:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.BatchNO, new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        ENTRY FROM
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.ENTRY_DATE, new { @disabled = "disabled", style = "width: 100px" })
                    </div>
                    <div class="col-xs-2">
                        TYPE
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownList("TYPE", new List<SelectListItem>
                    {
                        new SelectListItem{ Text="FINISHED GOODS", Value = "FG" },
                        new SelectListItem{ Text="SEMI FINISHED GOODS", Value = "SFG" },
                    }, new { @class = "form-control", style = "width: 205px;" })
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>                    
                    <div class="col-xs-6">
                        <input type="submit" id="btnsave" value="Save" class="btn btn-primary" />
                        <input type="submit" id="btnClose" value="Close" class="btn btn-danger" />                        
                    </div>
                </div>
            </div>

        </div>

    </div>
</div>