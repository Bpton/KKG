<div class="panel panel-default">
    <div class="panel-heading">
        <b>Sale Invoice(FG)</b>
    </div>
    <div style="margin-top:10px;"></div>
    <div class="panel-body">

        <div id="dvDisplay">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Invoice List</b>
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-2">
                        From Date:
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="txtfrmdate" style="width: 100px;height:20px;" disabled="disabled" onkeypress="return false;" />
                    </div>
                    <div class="col-sm-2">
                        To Date:
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="txttodate" style="width: 100px;height:20px;" disabled="disabled" onkeypress="return false;" />
                    </div>

                    <div class="col-xs-4" id="divnewentry">
                        <input type="submit" id="btnsearch" value="Search" class="btn btn-primary" />
                        <input type="submit" id="btnAddnew" value="Add New Record" class="btn btn-primary" />
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-12">

                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-lg-12">
                        <table id="invoiceGridFG" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"></table>
                    </div>
                </div>
            </div>
        </div>

        <div id="dvAdd">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Invoice Information</b>
                    </div>
                </div>
                <div class="row col-xs-12" id="divTransferNo">
                    <div class="col-xs-1">
                        Invoice No:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.FGInvoiceNo, new { @class = "form-control", @disabled = "disabled", style = "width: 160px;height: 25px;" })
                    </div>
                </div>

                <div class="row col-xs-12" id="divSourceDepot">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-2">
                        Source Depot:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.BRID, new SelectList(string.Empty, "BRID", "BRNAME"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.BRNAME)
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Invoice&nbsp;Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.InvoiceDate, new { @disabled = "disabled", style = "width: 100px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Customer&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.CUSTOMERID, new SelectList(string.Empty, "CUSTOMERID", "CUSTOMERNAME"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.CUSTOMERNAME)
                        @Html.Hidden("hdnCHECKER", "")
                        @Html.Hidden("hdnmenuid", "")
                        @Html.Hidden("hdntaxcount", "")
                        @Html.Hidden("hdntaxnameIGST", "")
                        @Html.Hidden("hdntaxnameCGST", "")
                        @Html.Hidden("hdntaxnameSGST", "")
                        @Html.Hidden("hdntaxpercentage", "")
                        @Html.Hidden("hdnrelatedto", "")
                        @Html.Hidden("igstid", "")
                        @Html.Hidden("cgstid", "")
                        @Html.Hidden("sgstid", "")
                        @Html.Hidden("hdndispatchID", "")
                        @Html.Hidden("hdnTCSLimit", "")
                    </div>
                    <div class="col-xs-1">
                        Sale Order:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.SaleOrderID, new SelectList(string.Empty, "SaleOrderID", "SaleOrderNo"), new { @class = "form-control chosen" })
                    </div>
                    <div class="col-xs-1">
                        Payment&nbsp;Mode:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.PaymentMode, new List<SelectListItem>
                        {
                            new SelectListItem{ Text="Advance", Value = "Cash" },
                            new SelectListItem{ Text="Credit", Value = "Credit" },
                        }, new { @class = "form-control" })
                    </div>
                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Transport:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.Tranportmode, new List<SelectListItem>
                        {
                            new SelectListItem{ Text="By Road", Value = "By Road" },
                            new SelectListItem{ Text="By Rail", Value = "By Rail" },
                            new SelectListItem{ Text="By Ship", Value = "By Ship" },
                            new SelectListItem{ Text="By Air", Value = "By Air" },
                        }, new { @class = "form-control" })
                    </div>
                    <div class="col-xs-1">
                        Transporter&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.TransporterID, new SelectList(string.Empty, "TransporterID", "TransporterNAME"), new { @class = "form-control chosen" })
                        @Html.Hidden("Transporter", "")
                    </div>
                    <div class="col-xs-1">
                        Waybill&nbsp;No:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.WAYBILLID, new SelectList(string.Empty, "WAYBILLID", "WAYBILLNO"), new { @class = "form-control chosen" })
                    </div>
                    <div class="col-xs-1">
                        Vehichle&nbsp;No.&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.VehichleNo, new { @class = "form-control", @onkeypress = "return true;", style = "height: 25px;" })
                    </div>

                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        LR&nbsp;No.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.LrGrNo, new { @class = "form-control", @onkeypress = "return true;", style = "height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        LR&nbsp;Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.LrGrDate, new { @disabled = "disabled", style = "width: 100px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Gatepass&nbsp;No:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.GatepassNo, new { @class = "form-control", @onkeypress = "return true;", style = "height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Gatepass&nbsp;Date:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.GatepassDate, new { @disabled = "disabled", style = "width: 100px;height: 25px;" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Insurance&nbsp;Co.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.ID, new SelectList(string.Empty, "ID", "COMPANY_NAME"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.COMPANY_NAME)

                    </div>
                    <div class="col-xs-1">
                        Policy&nbsp;No.&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.INSURANCE_NO, new SelectList(string.Empty, "INSURANCE_NO", "NO"), new { @class = "form-control chosen" })
                    </div>
                    <div class="col-xs-1">
                        Shipping&nbsp;Address:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextAreaFor(model => model.ShippingAddress, new { @class = "form-control", @rows = 4, @onkeypress = "return true;", style = "width: 250px;height: 95px;" })
                    </div>
                    <div class="col-xs-2">

                    </div>
                </div>
            </div>

            <div style="margin-top:25px;"></div>

            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Product Details</b>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Product:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.PRODUCTID, new SelectList(string.Empty, "PRODUCTID", "PRODUCTNAME"), new { @class = "form-control chosen", style = "width: 390px;" })

                    </div>
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-1">
                        Packsize:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.PSID, new SelectList(string.Empty, "PSID", "PSNAME"), new { @class = "form-control chosen", style = "width: 130px;" })
                    </div>
                    <div class="col-xs-3">

                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Batch No.:
                    </div>
                    <div class="col-xs-2">
                        <select id="ddlBatch" class="form-control" style="width:850px;"></select>
                        @Html.Hidden("hdnmrp", "")
                        @Html.Hidden("hdn_mfgdate", "")
                        @Html.Hidden("hdn_exprdate", "")
                        @Html.Hidden("hdnbatchno", "")
                        @Html.Hidden("hdn_ASSESMENTPERCENTAGE", "")
                        @Html.Hidden("hdnrate", "")
                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-3">

                    </div>

                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        MRP:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.MRP, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Rate:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.Rate, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Order&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.OrderQty, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Delivered&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.DeliveredQty, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Remaining&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.RemainingQty, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Stock&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.StockQty, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Invoice&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.InvoiceQty, new { @class = "form-control", @onkeypress = "return true;", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-3">
                        <input type="submit" id="btnadd" value="Add" class="btn btn-primary" />
                    </div>

                </div>

            </div>

            <div style="margin-top:25px;"></div>

            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Invoice Details</b>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-lg-12">
                        <div class="scroll">
                            <table id="productDetailsGrid" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%;"></table>
                        </div>
                    </div>
                </div>
            </div>

            <div style="margin-top:25px;"></div>
