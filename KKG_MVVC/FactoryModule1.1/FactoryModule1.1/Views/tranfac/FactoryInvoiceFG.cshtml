                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.BasicAmt, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Tax Amt.:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TaxAmt, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        (Basic + Tax) Amt.:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.GrossAmt1, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Gross Amt.:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.GrossAmt, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        R/O:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.RoundOff, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Invoice Amt.:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.NetAmt, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Total Case:
                    </div>
