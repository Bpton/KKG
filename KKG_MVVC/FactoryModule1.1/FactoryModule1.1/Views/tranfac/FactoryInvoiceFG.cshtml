                    </div>
                    <div class="col-xs-1">
                        TCS(%):
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TCSPercent, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        TCS&nbsp;Applicable:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TCSApplicable, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        TCS&nbsp;Amt:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TCSAmt, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                </div>

                

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        TCS&nbsp;Net&nbsp;Amt:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TCSNetAmt, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Remarks:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @rows = 4, @onkeypress = "return true;", style = "width: 210px;height: 95px;" })
