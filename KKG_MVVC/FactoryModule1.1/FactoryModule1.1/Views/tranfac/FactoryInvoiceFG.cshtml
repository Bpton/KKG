                    <div class="col-xs-1">
                        Total PCS:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TotalPcs, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Net&nbsp;Sale:
                    </div>
                    <div class="col-xs-1">
