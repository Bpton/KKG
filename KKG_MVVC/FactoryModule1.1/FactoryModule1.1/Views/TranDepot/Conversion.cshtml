<div class="panel panel-default">
    <div class="panel-heading">
        <b>CSD Conversion</b>
    </div>
    <div style="margin-top:10px;"></div>
    <div class="panel-body">

        <div id="dvDisplay">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>CSD Conversion List</b>
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-1">
                        From Date:
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="txtfrmdate" style="width: 100px;height:20px;" disabled="disabled" onkeypress="return false;" />
                    </div>
                    <div class="col-sm-1">
                        To Date:
                    </div>
                    <div class="col-xs-2">
                        <input type="text" id="txttodate" style="width: 100px;height:20px;" disabled="disabled" onkeypress="return false;" />
                    </div>
                    <div class="col-sm-1">
                        Depot:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.SearchDepotID, new SelectList(string.Empty, "BRID", "BRNAME"), new { @class = "form-control chosen" })
                    </div>

                    <div class="col-xs-3" id="divnewentry">
                        <input type="submit" id="btnsearch" value="Search" class="btn btn-primary" />
                        <input type="submit" id="btnAddnew" value="Add New Record" class="btn btn-primary" />
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-12">

                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-lg-12">
                        <table id="CSDConversionGrid" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"></table>
                    </div>
                </div>
            </div>
        </div>

        <div id="dvAdd" style="display:none;">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Conversion Info</b>
                    </div>
                </div>
                <div class="row col-xs-12" id="divTransferNo">
                    <div class="col-xs-1">
                        Journal No:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.FGInvoiceNo, new { @class = "form-control", @disabled = "disabled", style = "width: 210px;height: 25px;" })
                    </div>
                </div>


                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Date&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.InvoiceDate, new { @disabled = "disabled", style = "width: 100px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Depot&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.BRID, new SelectList(string.Empty, "BRID", "BRNAME"), new { @class = "form-control chosen" })
                        @Html.HiddenFor(x => x.BRNAME)
                    </div>
                    <div class="col-xs-1">
                        @Html.Hidden("hdnCHECKER", "")
                        @Html.Hidden("hdnmenuid", "")
                        @Html.Hidden("hdndispatchID", "")
                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-1">

                    </div>
                    <div class="col-xs-2">

                    </div>
                </div>
            </div>

            <div style="margin-top:25px;"></div>

            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Product Details</b>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Type&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.ConversionTypeID, new List<SelectListItem>
                         {
                             new SelectListItem{ Text="Make combo item from primary item", Value = "C2P" },
                         }, new { @class = "form-control chosen", style = "width: 250px;" })
                    </div>
                    <div class="col-xs-1">
                        &nbsp;
                    </div>
                    <div class="col-xs-1">
                        Combo&nbsp;Product&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.ComboProductID, new SelectList(string.Empty, "PRODUCTID", "PRODUCTNAME"), new { @class = "form-control chosen", style = "width: 300px;" })
                    </div>
                    <div class="col-xs-1">
                        &nbsp;
                    </div>
                    <div class="col-xs-1">
                        Conversion&nbsp;Qty&nbsp;<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        <div class="form-group form-inline">
                            @Html.TextBoxFor(model => model.ConversionQty, new { @class = "form-control", @onkeypress = "return isNumberKey(event)", style = "width: 80px;height: 25px;" })
                            <span id="spnQTY" style="font-weight:bold;"></span>
                        </div>
                    </div>

                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Product:
                    </div>
                    <div class="col-xs-2">
                        <select id="ddlBatch" class="form-control" style="width:450px;"></select>

                        @Html.Hidden("hdnbatchno", "")
                        @Html.Hidden("hdnproductid", "")
                        @Html.Hidden("hdnproductname", "")
                        @Html.Hidden("hdnbreakupqty", "")

                        @Html.Hidden("hdnFinYear", "")
                        @Html.Hidden("hdnUserID", "")
                        @Html.Hidden("hdnDepotID", "")
                        @Html.Hidden("hdnTPU", "")
                        @Html.Hidden("hdnSingleCartoon", "")
                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-2">

                    </div>
                    <div class="col-xs-3">

                    </div>
                </div>
            </div>

            <div style="margin-top:25px;"></div>
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9" id="divStock">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Stock&nbsp;Details</b>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-lg-12">
                        <div class="scrollBill">
                            <table id="stockDetailsGrid" class="table table-striped table-bordered dt-responsive nowrap compact" style="width:100%;"></table>
                        </div>
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-3">
                        &nbsp;
                    </div>
                    <div class="col-xs-1">
                        Product:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.SingleProductName, new { @class = "form-control", @disabled = "disabled", style = "width: 270px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Tot.Stock&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TotalStockQty, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        Tot.Conv&nbsp;Qty:
                    </div>
                    <div class="col-xs-1">
                        @Html.TextBoxFor(model => model.TotalConversionQty, new { @class = "form-control", @disabled = "disabled", style = "width: 110px;height: 25px;" })
                    </div>
                    <div class="col-xs-1">
                        <input type="submit" id="btnadd" value="Add" class="btn btn-primary" />
                    </div>
                </div>
            </div>

            <div style="margin-top:25px;"></div>
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9" id="divConversion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Conversion&nbsp;Details</b>
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-lg-12">
                        <div class="scrollBill">
                            <table id="conversionDetailsGrid" class="table table-striped table-bordered dt-responsive nowrap compact" style="width:100%;"></table>
                        </div>
                    </div>
                </div>
                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-6">
                        <input type="submit" id="btnsave" value="Save" class="btn btn-primary" />
                        <input type="submit" id="btnclose" value="Close" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div id="dialog" style="display: none">
    <table>
        <tr>
            <td align="right" style="background-color:#fff; padding-top:20px; width:50%;">
                <img id="imgLoader" alt="" src="../images/ajax-loader.gif" style="visibility: hidden" />
            </td>
            <td style="background-color:#fff; padding-top:20px;">
                &nbsp;&nbsp;Please wait...
            </td>
        </tr>
    </table>
</div>








