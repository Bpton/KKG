<style type="text/css">
    .dataTables_scroll {
        overflow: auto;
    }
</style>

<style>
    .dataTable > thead > tr > th[class*=sort]:after {
        display: none;
    }

    table.dataTable thead tr {
        background-color: lightblue;
    }

    table thead tr {
        background-color: lightblue;
    }

    table tbody:hover > tr td {
        opacity: 0.5;
    }

    table tbody:hover > tr:hover td {
        color: #2d2d2d;
        opacity: 1.0;
    }

    table.dataTable tbody tr:nth-child(odd) {
        background: #eee;
    }

    table tbody:nth-child(odd) > tr:nth-child(odd) {
        background: #eee !important;
    }

    .buttons-excel {
        padding: 6px 12px !important;
        background: lightblue !important;
        border-color: #2196F3 !important;
    }

    .dataTables_paginate a {
        padding: 6px 12px !important;
        background: lightblue !important;
        border-color: #2196F3 !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
        background: #2196F3;
        color: white !important; /*change the hover text color*/
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button:active {
        background: #2196F3;
        color: white !important; /*below block of css for change style when active*/
    }
    th {
        white-space: nowrap;
    }

    td {
        white-space: nowrap;
    }

</style>

<style>
    div.scroll {
        margin: 5px;
        padding: 5px;
        height: 300px;
        overflow: auto;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading">
        <b>Material Master</b>
    </div>
    <div style="margin-top:10px;"></div>
    <div class="panel-body">

        <div id="dvDisplay">
            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Material List</b>
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-2">
                        &nbsp;
                    </div>
                    <div class="col-xs-2">
                        &nbsp;
                    </div>
                    <div class="col-sm-2">
                        &nbsp;
                    </div>
                    <div class="col-xs-2">
                        &nbsp;
                    </div>
                    <div class="col-xs-4" id="divnewentry" align="right">
                        <input type="submit" id="btnsearch" value="Search" class="btn btn-primary" />
                        <input type="submit" id="btnAddnew" value="Add New Record" class="btn btn-primary" />
                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-xs-12">

                    </div>
                </div>
                <div style="margin-top:10px;"></div>
                <div class="row col-xs-12">
                    <div class="col-lg-12">
                        <table id="MaterialGrid" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%"></table>
                    </div>
                </div>
            </div>
        </div>

        <div id="dvAdd">

            <div class="panel-body" style="box-shadow: 5px 5px 5px 5px #D6DAD9">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <b>Material Details</b>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Product&nbsp;Owner<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.ProductOwner, new List<SelectListItem>
                        {
                            new SelectListItem{ Text="Select Owner", Value = "0" },
                            new SelectListItem{ Text="McNROE", Value = "M" },
                            new SelectListItem{ Text="Riya", Value = "R" },
                            new SelectListItem{ Text="Both", Value = "B" },
                        }, new { @class = "form-control chosen", style = "width: 150px;" })
                    </div>
                    <div class="col-xs-1">
                        Name<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control", @onkeypress = "return true;", style = "height: 30px;" })
                    </div>
                    <div class="col-xs-1">
                        Code<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.ProductCode, new { @class = "form-control", @onkeypress = "return true;", style = "height: 30px;" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Primary&nbsp;Item<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.PrimaryItemID, new SelectList(string.Empty, "ID", "ITEMDESC"), new { @class = "form-control chosen", style = "width: 150px;" })
                        &nbsp;<input type='image' class='PrimaryitemRefresh' id='btnRefreshPrimaryItem' src="../Images/ico_Refresh_1.png" width="14" height="14" title="Refresh" />
                    </div>
                    <div class="col-xs-1">
                        Sub&nbsp;Item<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        @Html.DropDownListFor(m => m.SubItemID, new SelectList(string.Empty, "SUBTYPEID", "SUBITEMDESC"), new { @class = "form-control chosen", style = "width: 250px;" })
                        &nbsp;<input type='image' class='SubitemRefresh' id='btnRefreshSubItem' src="../Images/ico_Refresh_1.png" width="14" height="14" title="Refresh" />
                    </div>
                    <div class="col-xs-1">
                        UOM<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        @Html.DropDownListFor(m => m.UomID, new SelectList(string.Empty, "INSURANCE_NO", "NO"), new { @class = "form-control chosen", style = "width: 200px;" })
                        &nbsp;<input type='image' class='UomRefresh' id='btnRefreshUOM' src="../Images/ico_Refresh_1.png" width="14" height="14" title="Refresh" />
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Unit&nbsp;Capacity<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.UnitCapacity, new { @class = "form-control", @onkeypress = "return true;", style = "width: 100px; height: 30px;" })
                    </div>
                    <div class="col-xs-1">
                        MRP<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.MRP, new { @class = "form-control", @onkeypress = "return true;", style = "width: 100px; height: 30px;" })
                    </div>
                    <div class="col-xs-1">
                        Min&nbsp;Stock&nbsp;Level&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        @Html.TextBoxFor(model => model.ReorderLevel, new { @class = "form-control", @onkeypress = "return true;", style = "width: 100px; height: 30px;" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Factory&nbsp;Map<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.FactoryID, new SelectList(string.Empty, "BRID", "BRNAME"), new { @class = "form-control chosen", style = "width: 200px;" })
                    </div>
                    <div class="col-xs-1">
                        Customer&nbsp;Map&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        <select id="ddlCustomer" class="form-control chosen" multiple="multiple" style="width:200px"></select>
                    </div>
                    <div class="col-xs-1">
                        Vendor&nbsp;Map&nbsp;:
                    </div>
                    <div class="col-xs-3">
                        <select id="ddlVendor" class="form-control chosen" multiple="multiple" style="width:200px"></select>
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Unit&nbsp;Capacity<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.UnitCapacityInput, new { @class = "form-control", @onkeypress = "return true;", style = "width: 100px; height: 30px;" })
                    </div>
                    <div class="col-xs-1">
                        Packsize&nbsp;From<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.PacksizeFrom, new SelectList(string.Empty, "INSURANCE_NO", "NO"), new { @class = "form-control chosen" })
                    </div>
                    <div class="col-xs-1">
                        <b>MAKE&nbsp;&nbsp;&nbsp;1</b>
                    </div>
                    <div class="col-xs-1">
                        Packsize&nbsp;To<span style="color:red"><b>*</b></span>&nbsp;:
                    </div>
                    <div class="col-xs-2">
                        @Html.DropDownListFor(m => m.PacksizeTo, new SelectList(string.Empty, "INSURANCE_NO", "NO"), new { @class = "form-control chosen" })
                    </div>
                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">
                        Assesment :
                    </div>
                    <div class="col-xs-2">
                        @Html.TextBoxFor(model => model.Assesment, new { @class = "form-control", @onkeypress = "return true;", style = "width: 100px; height: 30px;" })
                    </div>
                    <div class="col-xs-1">
                        Returnable :
                    </div>
                    <div class="col-xs-3">
                        <input type="checkbox" id="chkreturn" name="return" value="1">
                    </div>
                    <div class="col-xs-1">
                        Active :
                    </div>
                    <div class="col-xs-3">
                        <input type="checkbox" id="chkactive" name="active" value="1" checked>
                        @Html.Hidden("hdnMaterialID", "")
                    </div>

                </div>

                <div class="row col-xs-12">
                    <div style="margin-top:10px;"></div>
                    <div class="col-xs-1">

                    </div>
                    <div class="col-xs-6">
                        <input type="submit" id="btnsave" value="Save" class="btn btn-primary" />
                        <input type="submit" id="btnclose" value="Close" class="btn btn-danger" />
                    </div>

                </div>

            </div>

        </div>

    </div>
</div>



<div id="dialog" style="display: none">
    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td colspan="2" align="center">
                <img id="imgLoader" alt="" src="../Images/ajax-loader.gif" style="visibility: hidden" />
            </td>
        </tr>
    </table>
</div>

